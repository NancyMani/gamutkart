pipeline {
	agent none
	stages {
		stage ('Appbuild') {
			agent {
				docker {
					image 'maven:3-alpine'
					args '-v /root/.m2:/root/.m2'
				}
			}
			steps {
				sh 'mvn clean install'
			}
		}
		stage ('imagebuild') {
			agent any
				options {
					skipDefaultCheckout(true)
				}
			steps {
				script {
					def app = docker.build("nancyrheniusbenny/gamutkart:${BUILD_NUMBER}")
					app.inside {
					sh 'make test'
					}
				}
			}	
		}
	}
}
