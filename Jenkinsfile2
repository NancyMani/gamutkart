pipeline {
	agent none
	stages {
		stage ('Appbuild') {
			agent {
				docker {
					image 'maven:3-alpine'
					agrs '-v/root/.m2:/root/.m2'
				}
			}
			steps {
				sh 'mvn clean install'
			}
		}
		stage ('imagebuild') {
			agent any
				options {
					skipDefaultCheckout(true)
				}
			steps {
				script {
					docker.withRegistry('', 'dockerhub'){
					def app = docker.build("nancyrheniusbenny/gamutkartdemo:${BUILD_NUMBER}")
					app.push()
								
					}
				}
			}	
		}
	}
}
